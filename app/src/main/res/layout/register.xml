<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
android:background="@drawable/ed06b04c6ccbad6451923d022c3d7c29"
    tools:context=".register">

    <EditText
        android:id="@+id/editTextmail"
        android:layout_width="215dp"

        android:layout_height="42dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="150dp"
        android:background="@color/lightyellow"
        android:ems="10"
        android:inputType="textEmailAddress"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Email"
        android:textColorHint="@color/authui_colorPrimaryDark"/>

    <EditText
        android:id="@+id/editTextşifre"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="#FFEB3B"
        android:ems="10"
        android:hint="Şifre"
android:textColorHint="@color/authui_colorPrimaryDark"        android:inputType="textPassword"
        android:password="true"
        app:layout_constraintStart_toStartOf="@+id/editTextmail"
        app:layout_constraintTop_toBottomOf="@+id/editTextmail" />

    <EditText
        android:id="@+id/editTextşifreonay"
        android:hint="Şifre Onay"
        android:textColorHint="@color/authui_colorPrimaryDark"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="#FFEB3B"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextşifre"
        app:layout_constraintTop_toBottomOf="@+id/editTextşifre"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="216dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="#FF9800"
        android:text="Kayıt"
        app:layout_constraintStart_toStartOf="@+id/editTextşifreonay"
        app:layout_constraintTop_toBottomOf="@+id/editTextşifreonay" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="465dp" />

</androidx.constraintlayout.widget.ConstraintLayout>